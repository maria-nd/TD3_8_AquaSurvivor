<UserControl x:Class="AquaSurvivor.UCReglesJeu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AquaSurvivor"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="91*"/>
            <RowDefinition Height="59*"/>
        </Grid.RowDefinitions>

        <Label x:Name="labBienvenue" Content="BIENVENUE" HorizontalAlignment="Center" VerticalAlignment="Top" Height="100" Width="800" Background="#FF4AABA9" HorizontalContentAlignment="Center" FontSize="72" FontWeight="Bold"/>
        <Label x:Name="labRegleJeu" Content="REGLES" HorizontalAlignment="Left" Margin="19,105,0,0" VerticalAlignment="Top" Height="23" Width="147" Background="#FF65B5B0"/>

        <Button x:Name="but_Continuer" Content="CONTINUER" Margin="0,0,10,10" FontWeight="Bold" BorderBrush="Black" BorderThickness="5,5,5,5" Background="#FF76BFC1" Click="but_Continuer_Click" HorizontalAlignment="Right" Width="146" Height="50" VerticalAlignment="Bottom" Grid.Row="1"/>
        <StackPanel Margin="190,124,0,0" Grid.RowSpan="2" HorizontalAlignment="Left" Width="537" Height="245" VerticalAlignment="Top">
            <Label Content="Vous possédez une barre de faim qui diminue en continue. &#xD;&#xA;si elle se vide vous mourrez." Width="536" Background="{x:Null}" Height="53" HorizontalAlignment="Left" FontSize="16" FontWeight="Bold"/>
            <Label Content="Vous devez manger de la nourriture pour remplit votre barre de faim" Width="537" Background="{x:Null}" HorizontalAlignment="Left" Height="31" FontSize="16" FontWeight="Bold" RenderTransformOrigin="0.5,0.5">
                <Label.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleX="-4.318"/>
                        <RotateTransform/>
                        <TranslateTransform X="1.435"/>
                    </TransformGroup>
                </Label.RenderTransform>
            </Label>
            <Label Content="Si vous vous prenez des déchets votre timer diminue&#xD;&#xA;(vous perdez du temps selon le niveau de difficulté)" Width="535" Background="{x:Null}" Height="52" HorizontalAlignment="Left" FontSize="16" FontWeight="Bold"/>
            <Label Content="Si vous touchez la méduse votre barre de faim diminue de -10&#xD;&#xA; pendant 10secondes (intoxication)" Height="36" Width="535" Background="{x:Null}" HorizontalAlignment="Left" FontSize="16" FontWeight="Bold"/>
            <Label Content="L'étoile de mer boost votre vitesse" Background="{x:Null}" FontSize="16" FontWeight="Bold" Height="37"/>
            <Label Content="Atteignez les objectifs afin de passer au niveau supérieur" Height="40" FontSize="16" FontWeight="Bold" Background="{x:Null}"/>

        </StackPanel>
        <Grid Margin="10,133,0,0" Height="236" VerticalAlignment="Top" Grid.RowSpan="2" HorizontalAlignment="Left" Width="189">
            <Image Margin="78,49,38,156" Source="/img/Nourriture/imgCrevette.png" Stretch="Fill"/>
            <Image Margin="33,43,78,150" Source="/img/Nourriture/imgPoissonJaune.png" Stretch="Fill"/>
            <Image Margin="17,47,125,171" Source="/img/Nourriture/imgSardine.png" Stretch="Fill" RenderTransformOrigin="0.5,0.5">

            </Image>
            <Image Margin="126,74,-28,103" Source="/img/Déchets/imgBouteille.png" Stretch="Fill"/>
            <Image Margin="104,98,36,117" Source="/img/Déchets/imgCigare.png" Stretch="Fill" RenderTransformOrigin="0.5,0.5">

            </Image>
            <Image Margin="71,96,76,117" Source="/img/Déchets/imgCigarette.png" Stretch="Fill" RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-114.545"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
            <Image Margin="0,74,146,106" Source="/img/Déchets/imgSacPlastique.png" Stretch="Fill"/>
            <Image Margin="94,118,-7,47" Source="/img/Nourriture/imgMeduse.png" Stretch="Fill"/>
            <Image Margin="139,164,10,26" Source="/img/Nourriture/imgEtoileDeMer.png" Stretch="Fill"/>
            <Image Margin="145,47,0,0" Source="/img/Nourriture/imgCalamar.png" Stretch="Fill" HorizontalAlignment="Left" Width="38" Height="35" VerticalAlignment="Top"/>
            <Image Margin="40,67,0,0" Source="/img/Déchets/imgPoubelle.png" Stretch="Fill" HorizontalAlignment="Left" Width="36" Height="63" VerticalAlignment="Top"/>


        </Grid>

    </Grid>
</UserControl>
