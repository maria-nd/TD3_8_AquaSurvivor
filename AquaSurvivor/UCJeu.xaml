<UserControl x:Class="AquaSurvivor.UCJeu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AquaSurvivor"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <Canvas x:Name="canvasJeu">
        <Canvas.Background>
            <ImageBrush ImageSource="/img/Fonds/imgAquarium.png"/>
        </Canvas.Background>
        <Image x:Name="imgPoisson" Height="65" Canvas.Left="350" Source="/img/Poissons/imgPoisson1Droite.png" Stretch="Fill" Canvas.Top="328" Width="100"/>
        <ProgressBar x:Name="barreFaim" Height="21"  Canvas.Top="58" Width="185" Value="100" RenderTransformOrigin="0.5,0.5" Canvas.Left="605" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Label x:Name="labelScore" Content="Score :" Canvas.Left="80" Canvas.Top="40" HorizontalAlignment="Left" VerticalAlignment="Top" Width="63"/>
        <ProgressBar x:Name="barreBoost" Height="21" Canvas.Left="605" Canvas.Top="101" Width="185" Foreground="#FFD79A10" Maximum="10" Opacity="0"/>
        <Button x:Name="butPause" Content="" Canvas.Left="739" Canvas.Top="10" Click="butPause_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Width="51" Height="45">
            <Button.Background>
                <ImageBrush ImageSource="pack://application:,,,/img/Boutons/imgBoutonPause.png"/>
            </Button.Background>
        </Button>



    </Canvas>

</UserControl>
