<UserControl x:Class="AquaSurvivor.UCChoixPoisson"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AquaSurvivor"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="GridChoixPoisson">
        <RadioButton x:Name="rb1" Margin="112,57,0,0" Click="rb1_Click" Height="95" VerticalAlignment="Top" HorizontalAlignment="Left" Width="130" >
            <Image x:Name="img1" Height="95" Source="/img/Poissons/imgPoisson1Droite.png" Stretch="Fill" Width="110" RenderTransformOrigin="0.509,0.497"/>
        </RadioButton>

        <Label Content="Choisissez votre poisson" HorizontalAlignment="Center" VerticalAlignment="Top" Height="52" Width="462" Background="{x:Null}" FontSize="36" FontWeight="Bold" HorizontalContentAlignment="Center" Foreground="#FFD79A10" FontFamily="Cooper Black"/>

        <RadioButton x:Name="rb2" Margin="301,57,0,0" Click="rb2_Click" Height="94" VerticalAlignment="Top" HorizontalAlignment="Left" Width="130" >
            <Image x:Name="img2" Height="95" Source="/img/Poissons/imgPoisson2Droite.png" Stretch="Fill" Width="110" RenderTransformOrigin="0.509,0.497"/>
        </RadioButton>

        <RadioButton x:Name="rb3" Margin="489,57,0,0" Click="rb3_Click" HorizontalAlignment="Left" Width="130" Height="95" VerticalAlignment="Top" >
            <Image x:Name="img3" Height="95" Source="/img/Poissons/imgPoisson3Droite.png" Stretch="Fill" Width="110" RenderTransformOrigin="0.509,0.497"/>
        </RadioButton>

        <RadioButton x:Name="rb4" Margin="112,178,0,0" Click="rb4_Click" Height="94" VerticalAlignment="Top" HorizontalAlignment="Left" Width="130" >
            <Image x:Name="img4" Height="95" Source="/img/Poissons/imgPoisson4Droite.png" Stretch="Fill" Width="110" RenderTransformOrigin="0.509,0.497"/>
        </RadioButton>

        <RadioButton x:Name="rb5" Margin="301,178,0,0" Click="rb5_Click" Height="94" VerticalAlignment="Top" HorizontalAlignment="Left" Width="130" >
            <Image x:Name="img5" Height="95" Source="/img/Poissons/imgPoisson5Droite.png" Stretch="Fill" Width="110" RenderTransformOrigin="0.509,0.497"/>
        </RadioButton>

        <RadioButton x:Name="rb6" Margin="489,178,0,0" Click="rb6_Click" Height="94" VerticalAlignment="Top" HorizontalAlignment="Left" Width="130" >
            <Image x:Name="img6" Height="95" Source="/img/Poissons/imgPoisson6Droite.png" Stretch="Fill" Width="110" RenderTransformOrigin="0.509,0.497"/>
        </RadioButton>

        <RadioButton x:Name="rb7" Margin="112,300,0,0" Click="rb7_Click" Height="95" VerticalAlignment="Top" HorizontalAlignment="Left" Width="130" >
            <Image x:Name="img7" Height="95" Source="/img/Poissons/imgPoisson7Droite.png" Stretch="Fill" Width="110" RenderTransformOrigin="0.509,0.497"/>
        </RadioButton>

        <RadioButton x:Name="rb8" Margin="301,300,0,0" Click="rb8_Click" Height="95" VerticalAlignment="Top" HorizontalAlignment="Left" Width="130" >
            <Image x:Name="img8" Height="95" Source="/img/Poissons/imgPoisson8Droite.png" Stretch="Fill" Width="110" RenderTransformOrigin="0.509,0.497"/>
        </RadioButton>

        <RadioButton x:Name="rb9" Margin="489,300,0,0" Click="rb9_Click" Height="95" VerticalAlignment="Top" HorizontalAlignment="Left" Width="130" >
            <Image x:Name="img9" Height="95" Source="/img/Poissons/imgPoisson9Droite.png" Stretch="Fill" Width="110" RenderTransformOrigin="0.509,0.497"/>
        </RadioButton>
        <Button x:Name="butSuivant" Content="Suivant" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="54" Width="132" FontSize="24" Background="#FFD79A10" BorderThickness="5,5,5,5" Click="butSuivant_Click" Foreground="White" FontFamily="Cooper Black" IsEnabled="False">
            <Button.BorderBrush>
                <RadialGradientBrush>
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF7D5602" Offset="1"/>
                </RadialGradientBrush>
            </Button.BorderBrush>
        </Button>


    </Grid>
</UserControl>
